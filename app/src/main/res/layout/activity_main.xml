<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/binhminh">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:id="@+id/tv_city"
            android:textStyle=""
            android:fontFamily="@font/bariol"
            android:textSize="45dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thứ ba, ngày 28/04/2021"
            android:id="@+id/tv_date"
            android:textSize="20dp"
            android:fontFamily="@font/bariol"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19°C"
            android:id="@+id/tv_temperature"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textSize="80dp"
            android:fontFamily="@font/bariol"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nắng nhẹ"
            android:fontFamily="@font/bariol"
            android:textSize="35dp"
            android:layout_marginTop="-15dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"/>
        <TextView
            android:fontFamily="@font/bariol"
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------------------------"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tv_buoi"
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sáng sớm"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:fontFamily="@font/bariol"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="40dp">
        <ImageView
            android:id="@+id/iv_temp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bg_lv_temp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/iv_hum"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_lv_humidity"/>
        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bg_lv_wind"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/line"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_forecast"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>